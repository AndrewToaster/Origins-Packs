{
    "name": "Increased Size",
    "description": "Due to your nature, your body size is increased, granting you less speed and more defense",
    "type": "origins:action_on_callback",

    "entity_action_chosen": {
      "type": "origins:execute_command",
      "command": "function custom_commands:golem/golem_size_inc",
      "permission_level": 2
    },

    "entity_action_respawned": {
      "type": "origins:execute_command",
      "command": "function custom_commands:golem/golem_size_inc",
      "permission_level": 2
    },

    "entity_action_removed": {
      "type": "origins:execute_command",
      "command": "function custom_commands:golem/golem_size_dec",
      "permission_level": 2
    },
    
    "execute_chosen_when_orb": true
  }